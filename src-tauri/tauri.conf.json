{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cloud Master",
  "version": "0.1.0",
  "identifier": "cloud.master",
  "build": {
    "beforeDevCommand": "yarn server:build && yarn dev",
    "beforeBuildCommand": "yarn server:build && yarn build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist",
    "additionalWatchFolders": ["binaries"]
  },
  "app": {
    "windows": [
      {
        "title": "Cloud Master",
        "width": 800,
        "minWidth": 320,
        "height": 600,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/node-server"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
